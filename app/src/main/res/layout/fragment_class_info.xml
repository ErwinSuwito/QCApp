<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.classrooms.ClassInfoFragment">

    <LinearLayout
        android:id="@+id/infoLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/projector_model" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/projector_ip_address"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/high_lamp_hour"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/low_lamp_hour"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/last_checked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/infoLinearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/projector_model_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Projector Model"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/projector_ip_address_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Projector IP Address"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/high_lamp_hour_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="High Lamp Hour"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="177dp"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/low_lamp_hour_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Low Lamp Hour"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/last_checked_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last Checked"
            android:layout_margin="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>