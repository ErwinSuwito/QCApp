<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addProjectorLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.qcadmin.AddProjectorFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_projector"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />



    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/isDeployedSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/is_projector_deployed"
        android:textOff="No"
        android:textOn="Yes"
        android:trackTintMode="add" />

    <Button
        android:id="@+id/saveButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:height="32dp"
        android:backgroundTint="@color/theme_purple_lighter"
        android:text="@string/save" />
</LinearLayout>
